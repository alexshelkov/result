{
  "name": "lambda-res",
  "description": "Type-safe error handling without exception",
  "version": "1.0.0",
  "author": "Alex Shelkovskiy <alexshelkov@gmail.com>",
  "repository": "https://github.com/alexshelkov/result",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix --rule 'tsc/config: [2, {configFile: \"tsconfig.json\"}]'",
      "git add"
    ]
  },
  "scripts": {
    "check": "tsc --noEmit && eslint --fix src",
    "build": "tsc -b",
    "test": "jest --coverage --collectCoverageFrom=src/**",
    "prepublishOnly": "rm -rf dist && npm run build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@types/jest": "^26.0.21",
    "coveralls": "^3.1.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3",
    "eslint-plugin-tsc": "^2.0.0"
  }
}
